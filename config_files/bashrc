if [ -f ~/.bash_environments ]; then
    . ~/.bash_environments
fi

if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if [ -f ~/.bash_script.bash ]; then
    . ~/.bash_script.bash
fi

if [ -f ~/.git-completion.bash ]; then
    . ~/.git-completion.bash
fi

if [ $SHLVL = 1 ] && [ -f ~/.screenrc ]; then
    -screenStarter
fi

# bashの追記は不要 (PROMPT_COMMAND='share_history' による)
shopt -u histappend

PS1="\n\u@\h  ( \$(-pathWriter) )\$(-gitChecker)\
\n[ \$(-screenPrinter) ]\$(-envWriter)\$ "

-screenSessionPrinter
